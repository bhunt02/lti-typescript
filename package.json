{
  "name": "lti-typescript",
  "version": "0.1.0",
  "description": "Forked from LTIJS (cvmcosta.github.io/ltijs/). Easily turn your web application into a LTI 1.3 Learning Tool. Reformatted with Typescript for improved type safety, switched database access and schema management to use Typeorm for more hands-off management.",
  "main": "index.js",
  "exports": {
    ".": "./index.js"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=20.19.3"
  },
  "scripts": {
    "build": "rimraf dist && yarn tsc --project tsconfig.build.json -d",
    "build:release": "rimraf dist && yarn tsc --project tsconfig.build.json -d && cp README.md ./dist && yarn build:generate-package",
    "build:generate-package": "node generate-dist-package.js",
    "test": "jest -i --forceExit",
    "test:cov": "yarn test --coverage",
    "test:update-snapshots": "yarn test --updateSnapshot",
    "lint": "yarn eslint --fix \"{src,test}/**/*.ts\" && prettier --write \"{src,test}/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhunt02/lti-typescript.git"
  },
  "keywords": [
    "lti",
    "lms",
    "lti 1.3",
    "imslti",
    "1.3",
    "advantage",
    "typeorm"
  ],
  "author": "bhunt02",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bhunt02/ltijs/issues"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "express": "^4.19.2",
    "fast-url-parser": "^1.1.3",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "parse-link-header": "^2.0.0",
    "pg": "^8.16.3",
    "rasha": "^1.2.5",
    "reflect-metadata": "^0.2.2",
    "sprightly": "^2.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.1",
    "@babel/eslint-parser": "^7.27.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/register": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@eslint/eslintrc": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "cheerio": "^1.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "jest": "^30.0.5",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "standard": "^17.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "typescript-declaration-webpack-plugin": "^0.3.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".(integration|spec).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testTimeout": 10000,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**"
    ]
  },
  "packageManager": "yarn@1.22.22",
  "types": "index.d.ts"
}