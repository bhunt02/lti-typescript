{
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "lib": ["ES2020","DOM"],
    "strictNullChecks": false,
    "inlineSources": true,
    "paths": {
      "fast-url-parser": ["src/types/fast-url-parser.d.ts"]
    },
    "sourceRoot": "/"
  },
  "include": ["src/index.ts"],
}
